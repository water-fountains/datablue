{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    // TODO update once webpack bug regarding ?? is fixed
    "target": "es2019",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "declaration": false,

    "strict": true,
    // checked by eslint
    //"noUnusedLocals": true
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    //TODO needs more effort but it would be better if this is true
    "noImplicitAny": false,

    "esModuleInterop": true
  }
}
